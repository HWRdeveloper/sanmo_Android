<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateNewActivity"
    android:orientation="vertical">


    <TextView
        android:id="@+id/rule_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="혈압"
        />




    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1차 " />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/bpText"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:hint="mmHg"
            android:onClick="InputInfo"
            app:hintAnimationEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/bpinputText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false" />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="/"
            android:textSize="20dp" />


        <com.google.android.material.textfield.TextInputLayout

            android:id="@+id/bpText1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:hint="mmHg"

            app:hintAnimationEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/bpinputText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="InputInfo"

                />

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2차 " />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/bpText2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:hint="mmHg"
            android:onClick="InputInfo"

            app:hintAnimationEnabled="false">



            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/bpinputText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false" />


        </com.google.android.material.textfield.TextInputLayout>


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="/"
            android:textSize="20dp" />


        <com.google.android.material.textfield.TextInputLayout

            android:id="@+id/bpText1_2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:hint="mmHg"

            app:hintAnimationEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/bpinputText1_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="InputInfo"

                />

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>



    <TextView
        android:id="@+id/skin_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="혈당"
        />


    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="공복 " />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/bsText"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:hint="mg/dl"
            android:onClick="InputInfo"

            app:hintAnimationEnabled="false">



            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/bsinputText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false" />


        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="식후1시간" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/bsText2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:hint="mg/dl"
            android:onClick="InputInfo"

            app:hintAnimationEnabled="false">



            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/bsinputText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"/>


        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="식후2시간" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/bsText3"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:hint="mg/dl"
            android:onClick="InputInfo"

            app:hintAnimationEnabled="false">



            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/bsinputText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false" />


        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/skin_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        />


    <EditText
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:ems="10"
        android:gravity="start|top"
        android:layout_margin="20dp"
        android:inputType="textMultiLine" />

    <Button
        android:onClick="save"
        android:id="@+id/create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저장"
        android:layout_marginLeft="10dp"/>



</LinearLayout>